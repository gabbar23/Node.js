extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")
block content
    main
    if prod.length>0
        div.grid
            each product in prod
                article.card.product-item

                    header.card__header 
                        h1.product.title #{product.title} 
                    div.class_image 
                        img(src="https://images.olx.com.pk/thumbnails/279923374-120x90.jpeg", alt="image")
                    div.card_content
                        h2.product__price $20$
                        p.product__description A very interesting Computer Laptop 
                    div.card__actions 

                    button.btn Add to Cart
    else
        h1 No Products